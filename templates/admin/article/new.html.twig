{% extends 'admin/base.html.twig' %}

{% block title %}Articles - Ecrire un post{% endblock %}

{% block body %}

    <div class="container">
        <div class="row my-3">
            <div class="col-md-3">
                <a href="#" class="btn btn-outline-primary">Ecrire un article</a>
                <a href="#" class="btn btn-outline-secondary">Ajouter une catégorie</a>
            </div>
            <div class="col-md-9">
                <h2>Ecrire un article</h2>
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.content) }}
                {{ form_row(form.categorie) }}
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mt-3">Créer l'article</button>
                </div>
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}